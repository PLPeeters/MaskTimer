<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MaskTimer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Theme.MaskTimer.Toolbar</item>
        <item name="appBarIconColor">@color/black</item>
        <item name="radioButtonStyle">@style/Theme.MaskTimer.RadioButton</item>
        <item name="alertDialogTheme">@style/Theme.MaskTimer.AlertDialog.Dark</item>
        <item name="android:colorControlActivated">@color/primary_color</item>
    </style>

    <style name="Theme.MaskTimer.AlertDialog.Dark" parent="Theme.MaskTimer.AlertDialog">
        <item name="colorAccent">@color/primary_color</item>
    </style>

    <style name="Theme.MaskTimer.AlertDialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_color</item>
    </style>
</resources>
